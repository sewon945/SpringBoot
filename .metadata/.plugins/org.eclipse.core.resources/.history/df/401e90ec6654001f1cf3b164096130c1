spring.application.name=SecurityBasic

# 포트 번호 설정
# 띄어쓰기 인식함. 공백 없도록 주의할 것!
server.port=8092
# localhost:8090/myapp (myapp이 컨텍스트 루트)
#context-root : 서버 내에서 프로젝트를 구변하기 위해 쓰는 식별자
server.servlet.context-path=/

# view 경로 설정 (view-Resolver)
spring.mvc.view.prefix=/WEB-INF/views/
spring.mvc.view.suffix=.jsp


# DB 접속 정보 설정
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
# 워크벤치에서 확인하고 본인이 가지고 있는 스키마 이름만 수정하면 됨
spring.datasource.url=jdbc:mysql://localhost:3306/maven?useSSL=false&characterEncoding=UTF-8&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=1234


# JPA 설정
# ddl-auto : create(서버가 시작될때마다 drop-create)
# update(수정사항이 있을때만 반영)
# none(반영 x)
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.show-sql=true

# token 관련되어 있는 key, time(초단위) 설정해주기
# jwt.secret 변수 선언한 것임
# 복잡한 형태의 key 정의하기(단순하면 안됨)
jwt.secret=VlwEyVBsYt9V7zq57TejMnVUyzblYcfPQye08f7MGVA9XkHa
# 임의적으로 60000초라고 지정
jwt.expiration_time=60000